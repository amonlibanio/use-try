{
  "name": "use-try",
  "version": "1.0.0",
  "description": "Removing unnecessary try-catch-finally blocks.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "preversion": "npm run format && npm run build",
    "prepublishOnly": "npm run format && npm run test && npm run build",
    "test": "jest",
    "build": "tsc",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "try",
    "catch",
    "clean",
    "code",
    "javascript",
    "typescript",
    "node"
  ],
  "author": "Amon Libanio",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/amonlibanio/use-try.git"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "pretty-quick": "^4.0.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "/tests/.*\\.spec\\.(ts|tsx)$",
    "coverageDirectory": "./coverage",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  },
  "prettier": {
    "printWidth": 120
  },
  "files": [
    "dist/**/*"
  ],
  "dependencies": {
    "use-try": "^1.0.0"
  }
}
